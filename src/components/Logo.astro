<style>

  .box {
    position: absolute;
    opacity: 0;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    padding: 1rem;

    font-weight: 500;
    font-size: .88rem;
    text-transform: uppercase;
    line-height: .8;
  }

  .b1 {
   animation: ani1 4s infinite ease-in-out;
  }

  .b2 {
    animation: ani2 4s infinite ease-in-out;
    color: var(--color-quinto);
  }

  .b3 {
    animation: ani3 4s infinite ease-in-out;
    color: var(--color-quinto);
  }

  @keyframes ani1 {
    0% {
      opacity: 0;
    }
    .1% {
      opacity: 1
    }
    39.9% {
      opacity: 1
    }
    40% {
      opacity: 0;
    }
  }

  @keyframes ani2 {
    40% {
      opacity: 0;
    }
    40.1% {
      opacity: 1
    }
    69.9% {
      opacity: 1
    }
    70% {
      opacity: 0;
    }
  }

  @keyframes ani3 {
    70% {
      opacity: 0;
    }
    70.1% {
      opacity: 1
    }
    99.9% {
      opacity: 1
    }
    100% {
      opacity: 0;
    }
  }
</style>