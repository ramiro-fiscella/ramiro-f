---
import Section from '../Section.astro';
import { projects } from '@cv';
---

<Section>
  <h2 class="subtitle">Projects</h2>
  <ul class="projects">
    {projects.map(({ name, description, roles, url, image }) => (
      <li class="project">
        <a href={url} target="_blank" rel="noopener noreferer">
          <!-- Imagen de fondo -->
          <img src={image} alt={name} class="project-image" />

          <!-- Capa fija: Título sobre la imagen -->
          <div class="overlay-title">
            <h3>{name}</h3>
          </div>

          <!-- Capa hover: Información adicional con efecto glassmorphism -->
          <article class="data">
            <p>{description}</p>
            <footer class="project-footer">
              <ul class="roles">
                {roles.map((role) => (
                  <li>
                    <span class="tag">{role}</span>
                  </li>
                ))}
              </ul>
            </footer>

            <h3 class="project-name">{name}</h3>
          </article>
        </a>
      </li>
    ))}
  </ul>
</Section>

<style>
  /* Contenedor de proyectos */
  h2.subtitle {
    margin-top: 0;
  }
  .projects {
    width: 100%;
    display: flex;    
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0;
    list-style: none;
  }

  /* Cada proyecto se posiciona de forma relativa para ubicar los overlays */
  .project {
    position: relative;
    width: 49%;
    border-radius: 4px;
    overflow: hidden;
    background: var(--color-fondo);
    transition: all 0.3s ease;
  }

  /* Aseguramos que el enlace ocupa toda la card */
  .project a {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .project-name {
    position: absolute;
    bottom:  0;
    left: 0;
    width: 100%;
    padding: 0.5rem 1rem;
    box-sizing: border-box;
    color: #fff;
    font-size: 1.1rem;
    transition: opacity 0.3s ease;
  }
  
  /* Imagen de fondo */
  .project-image {
    width: 100%;
    height: 280px;
    object-fit: cover;
    display: block;
  }

  /* Capa fija: Título */
  .overlay-title {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.2));
    padding: 0.5rem 1rem;
    box-sizing: border-box;
    transition: opacity 0.3s ease;
  }

  .overlay-title h3 {
    margin: 0;
    color: #fff;
    font-size: 1.1rem;
  }

  /* Capa hover: Overlay glassmorphism */
  .data {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #00000064;
    backdrop-filter: blur(8px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: end;
    color: var(--color-fondo);
  }

  /* Al hacer hover se muestra la capa data y se oculta la capa de título */
  .project:hover .data {
    opacity: 1;
    pointer-events: auto;
  }
  .project:hover .overlay-title {
    opacity: 0;
  }

  /* Estilos dentro de la capa hover */
  .data p {
    font-size: 0.85rem;
    opacity: 0.9;
    line-height: 1.2;
    margin: 0;
    color: var(--color-white);
    text-shadow: 1px 1px 4px rgb(0, 0, 0);
  }

  .project-footer {
    margin-top: 0.5rem;
  }
  .roles {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0;
    list-style: none;
  }

  .tag {
    font-size: 0.6rem;
    background-color: var(--color-primario-2);
    color: var(--color-white);
  }
  
  footer {
    margin-bottom: 1.8rem;
  }
  @media (max-width: 920px) {
    .projects {
      width: 100%;
      flex-direction: column;
      flex-wrap: nowrap;
      margin: auto;
    }
    /* Aquí cambiamos el ancho al 100% para dispositivos tablet o menores */
    .project {
      width: 100%;
    }
  }
</style>
