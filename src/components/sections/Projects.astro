---
import Section from '../Section.astro';

import { projects } from '@cv';
---

<Section title="Proyectos">
  <ul class="projects">
    {
      projects.map(({ name, description, tech, url }) => {
        return (
          <>
            <li class="project">
              <article>
                <header>
                  <h4>{name}</h4>
                  <p>{description}</p>
                </header>
                <footer class="project-footer">
                  <p>Tecnolog√≠as</p>
                  <ul class="tech">
                    {tech.map((tech) => {
                      return (
                        <li>
                          <span class="tag">{tech}</span>
                        </li>
                      );
                    })}
                  </ul>
                </footer>
              </article>
                <a href={url} target="_blank" rel="noopener noreferer">
                  Demo
                </a>
            </li>
          </>
        );
      })
    }
  </ul>
</Section>

<style>
  /* ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  } */
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: 1rem;
  }
  .project   {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    border-radius: 4px;
    padding: 1rem;
    width: 100%;
    min-height: 100%;
  }
  

  article {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: .2rem;
    
  }

  .tech {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }
  .tag{
    font-size: 0.7rem;
    padding: 6px 8px;
  }


  a {
    position:relative;
    bottom: 0;
    font-size: 0.8rem;
    font-weight: 400;
    font-family: var(--font-secundaria);
    text-transform: uppercase;
    text-align: center;
    color: var(--color-primario);
    border: 1px solid var(--color-primario);
    padding: 8px 16px;
    width: 100%;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  a:hover {
    background: var(--color-primario);
    color: var(--color-secundario);
  }
  .project-footer {
    margin-top: .6rem;
    padding-top: .4rem;
  }
  .project-footer p {
    margin: .4rem 0;
  }


  @media print {
    * {
      color: black;
      background: white;
    }

    a {
      display: none;
    }
  }
</style>
