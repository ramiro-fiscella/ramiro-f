---
import Section from '../Section.astro';
import { education } from '@cv';
---

<Section>
  <h2 class="subtitle">Certificates</h2>

  <ul>
    {
      education.map(
        ({ institution, area, studyType, duration, startDate, endDate }) => {
          return (
            <li>
              <article class="education">
                <header>
                  <h3>{institution}</h3>
                  <p class="date">
                    {startDate} - {endDate ? endDate : 'Presente'}
                  </p>
                </header>
                <h4>{area}</h4>
                <footer>
                  <p>
                    {studyType} <span>| {duration}</span>
                  </p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  .education {
    height: max-content;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-fondo);
    border: 1px solid var(--color-borde);
    border-radius: 8px;
    color: var(--color-terciario);
    transition: all 0.3s ease;
  }

  .education:hover {
    border-color: var(--color-fondo);
  }

  ul {
    columns: 3;
    column-width: 21rem;
    /* column-rule: 1px solid rgba(255, 255, 255, 0.2); */

    column-gap: 1rem;
    padding: 0;
  }

  li {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;

    break-inside: avoid;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-texto);
    text-wrap: balance;
    margin-bottom: 0;
  }

  h4 {
    margin-top: 0;
    font-size: 0.95rem;
    font-weight: 500;
    font-family: 'Space Grotesk', monospace;
    text-transform: uppercase;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    font-size: 0.85rem;
    color: var(--color-texto);

    text-wrap: pretty;
  }

  footer span {
    color: var(--color-terciario);
  }

  .date {
    min-width: max-content;
    font-size: 0.85rem;
    opacity: 0.75;
    color: var(--color-terciario);
  }

  @media screen and (max-width: 760px) {
    ul {
      flex-direction: column;
    }
  }

  @media print {
    * {
      color: black;
      background: white;
    }

    h4 {
      color: black;
    }

    a {
      display: none;
    }

    ul {
      grid-template-columns: none;
    }
  }
</style>
