---
import Section from '../Section.astro';

import { education } from '@cv';
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, area, studyType, startDate, endDate }) => {
        return (
          <li>
            <article class="education">
              <header>
                <h3>{institution}</h3>
                <p class="date">
                  {startDate} - {endDate ? endDate : 'Presente'}
                </p>
              </header>
                  <h4>{area}</h4>
              <footer>
                <p>{studyType}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  .education {
    border-radius: 4px;
    padding: 1.2rem;
    width: 100%;
    height: max-content;
  }
  ul {
    display: flex;
    
    flex-direction: row;
    gap: 1rem;
    height: max-content;
  }
  li {
    width: 100%;
    
    height: fit-content;
  }

  h4 {
    text-transform: uppercase;
    font-weight: 500;
    font-size: 0.8rem;
    margin: 4px 0;
    letter-spacing: 0.01rem;
    color: var(--color-primario);
  }
  .date {
    text-transform: uppercase;
    font-size: 0.7rem;
    margin: 4px 0 0 0;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }

  @media screen and (max-width: 760px) {
    ul {
      flex-direction: column;
    }
  }

  @media print {
    * {
      color: black;
      background: white;
    }

    h4 {
      color: black;
    }

    a {
      display: none;
    }
  }
</style>
