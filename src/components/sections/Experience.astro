---
import Section from '../Section.astro';
import { work } from '@cv';
---

<Section title="Experience">
  <ul class="experience-list">
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        return (
          <li class="experience-item">
            <article class="experience-article">
              <header>
                <div>
                  <h3 class="company">{name}</h3>
                  <h4 class="position">{position}</h4>
                </div>
                <p class="date">
                  {startDate} - {endDate ? endDate : 'Present'}
                </p>
              </header>
              <p class="summary">{summary}</p>
              {url && (
                <a class="read-more" href={url} target="_blank">
                  View More
                </a>
              )}
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-content: flex-start;
    align-items: flex-start;
    margin-bottom: 4px;
  }
  .experience-list {
    /* columns: 3;
    column-width: 21rem; */
    /* column-rule: 1px solid rgba(255, 255, 255, 0.2); */
    /* column-gap: 1rem; */

    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0;
  }

  .experience-item {
    border-block-end: 1px solid var(--color-experiencia-borde);

    /* break-inside: avoid;
    margin-bottom: 1rem; */
  }
  .experience-item:first-child {
    border-block-start: 1px solid var(--color-experiencia-borde);
  }

  .experience-article {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 2rem;

    background: var(--color-fondo);
    color: var(--color-experiencia-texto);

    /* border-radius: 8px; */
    transition: all 0.3s ease;
  }

  .experience-article:hover {
    background: var(--color-experiencia-fondo);
    /* border-color: var(--color-fondo); */
    /* box-shadow: 0px 4px 18px rgba(0, 0, 0, 0.164); */
  }

  .h3 {
    font-weight: 600;
    letter-spacing: 0.03rem;
    color: var(--color-secundario);
  }

  .date {
    font-size: 0.85rem;
    opacity: 0.75;
    color: var(--color-terciario);
  }

  .position {
    margin-bottom: 0.4rem;
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--color-terciario);
  }

  .summary {
    opacity: 0.9;
  }

  .read-more {
    align-self: flex-start;
    color: var(--color-texto); /* Color del enlace */
    text-decoration: none;
    transition: border-bottom 0.2s ease;
    border-bottom: 1px solid var(--color-texto); /* Cambio de color en hover */
  }

  .read-more:hover {
    color: var(--color-primario);
    border-bottom: 1px solid var(--color-primario); /* Cambio de color en hover */
  }

  @media (max-width: 768px) {
    .experience-list {
      grid-template-columns: 1fr;
    }

    .experience-article {
      padding-inline: 0;
    }
    p.date {
      word-break: keep-all;
      white-space: nowrap;
      font-size: 0.68rem;
    }
  }
</style>
