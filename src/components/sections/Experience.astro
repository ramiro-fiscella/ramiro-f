---
import Section from '../Section.astro';

import { work } from '@cv';
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        return (
          <>
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                  </div>
                  <p class="date">
                    {startDate} - {endDate ? endDate : 'Presente'}
                  </p>
                </header>
                <h4>{position}</h4>
                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          </>
        );
      })
    }
  </ul>
</Section>

<style>
  article {
    border: 1px solid var(--color-quinto);
    border-radius: 4px;
    padding: 1.2rem;
    width: 100%;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h4 {
    text-transform: uppercase;
    font-weight: 500;
    font-size: 0.8rem;
    margin: 4px 0;
    letter-spacing: 0.01rem;
    color: var(--color-primario);
  }
  .date {
    text-transform: uppercase;
    font-size: 0.7rem;
    margin: 4px 0 0 0;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }
  @media print {
    h4 {
      color: black;
      background: white;
    }
  }
</style>
