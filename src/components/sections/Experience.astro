---
import Section from '../Section.astro';

import { work } from '@cv';
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        return (
          <>
            <li>
              <article class="experience-article">
                <header>
                  <div>
                    <h3>{name}</h3>
                  </div>
                  <p class="date">
                    {startDate} - {endDate ? endDate : 'Presente'}
                  </p>
                </header>
                <h4>{position}</h4>
                <footer>
                  <p>{summary}</p>
                  <a class="read-more" href={url} target="_blank">{url ? 'Ver m√°s' : ''}</a>
                </footer>
              </article>
            </li>
          </>
        );
      })
    }
  </ul>
</Section>

<style>
  .experience-article {
    border-radius: 4px;
    padding: 1.2rem;
    width: 100%;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h4 {
    text-transform: uppercase;
    font-weight: 500;
    font-size: 0.8rem;

    letter-spacing: 0.01rem;
    color: var(--color-primario);
  }
  .date {
    font-family: var(--font-secundaria);
    color: var(--color-terciario);
    text-transform: uppercase;
    font-size: 0.7rem;
    font-weight: 500;
  }
  article header {
    display: flex;
    justify-content: space-between;
    align-content: flex-start;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  footer p {
    margin: 0 0 8px;
  }
  
  @media print {
    h4 {
      color: black;
      background: white;
    }
  }
</style>
