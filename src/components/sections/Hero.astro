---
import { basics } from '@cv';
import Section from '@/components/Section.astro';
import WorldMap from '@/icons/WorldMap.astro';

const { name, label1, label2, image, location, profiles, email } = basics;
const { city, region } = location;

const linkedInfo = profiles.find((p) => p.network === 'LinkedIn');
const LinkedUrl = linkedInfo?.url;

const githubInfo = profiles.find((p) => p.network === 'GitHub');
const gitHubUrl = githubInfo?.url;

const printInfo = [email, LinkedUrl, gitHubUrl];
---

<Section>
  <div class="container">
    <div class="info">
      <div class="title">
        <h1 class="name">
          Hello, I'm
          <br />
          {name}
        </h1>

        <div class="labels">
          <h2>
            A {label1}
            <br />
            &
            {label2} with <br />
            +2 years experience
          </h2>
        </div>
        <span>
          <WorldMap />
          {city}, {region}
        </span>
        <p class="quote">
          Designing with purpose <br />
          Thinking with empathy <br />
          Enjoying the process
        </p>
      </div>
      <footer>
        {
          email && (
            <a
              class="mail"
              href={`mailto:${email}`}
              title={`Enviar correo electrÃ³nico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferer"
            >
              Contact
            </a>
          )
        }
        <div class="social-flex">
          {
            profiles.map(({ network, url }) => {
              return (
                <a
                  class="social"
                  href={url}
                  title={`Visitar perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferer"
                >
                  {network}
                </a>
              );
            })
          }
        </div>
      </footer>
    </div>

    <!-- <figure>
      <img src={image} alt={name} />
    </figure> -->
  </div>
</Section>

<style>
  .container {
    position: relative;
    margin-top: 80px;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    text-align: left;
  }

  .title {
    margin-top: 8rem;
    display: flex;
    flex-direction: column;
    gap: 0.48rem;
  }

  .info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 100%;
    width: 100vw;
    max-width: 1024px;
    gap: 1rem;
    align-items: baseline;
  }
  .name {
    letter-spacing: -0.01em;
    font-size: 4rem;
    font-weight: 400;
    line-height: 0.8;
    color: var(--color-texto);
  }
  .labels h2 {
    line-height: 1;
    font-size: 2.4rem;
    font-weight: 400;
    color: var(--color-primario);
    /* text-transform: uppercase; */
    margin: 0;
  }

  span {
    color: var(--color-terciario);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.01rem;
    font-weight: 500;
    margin: 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 0.4rem;
  }

  .quote {
    margin-top: 2rem;
    /* align-self: flex-end; */
    font-size: 1rem;
    font-weight: 300;
    word-break: keep-all;
    white-space: nowrap;
    color: var(--color-terciario);
  }
  /* 
  figure {
    position: absolute;
    right: -8rem;

    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-start;
    gap: 0.4rem;

    height: 16rem;
    margin: 0;
  }
  figure p {
    color: var(--color-terciario);
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.01rem;
    line-height: 1.4;
    font-weight: 500;
    text-align: right;
    margin: 0;
  }

  figure img {
    height: 90%;
    border-radius: 16px;

    object-fit: cover;
  } */

  footer {
    flex-direction: column;
    align-items: start;
    display: flex;
    gap: 1rem;
  }

  .social-flex {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .social {
    font-size: 1rem;
    font-weight: 600;
    padding: 8px 24px;
    border-radius: 12px;
    border: 1px solid var(--color-borde);
    color: var(--color-texto);
    transition: all 0.3s ease;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .social:hover,
  .social:focus-visible {
    border: 1px solid var(--color-primario);
    box-shadow: 0 2px 12px var(--color-sombra-boton-hover);
  }

  .mail {
    background-color: var(--color-primario);
    color: var(--color-fondo);
    border: 1px solid var(--color-primario);
    width: 100%;
    padding: 24px;
    border-radius: 12px;
    display: block;
    box-shadow: 0px 4px 18px rgba(0, 0, 0, 0.164);
    font-size: 1.4rem;
    letter-spacing: 0.1rem;
    font-weight: 400;
  }

  .mail:hover {
    border: 1px solid var(--color-primario);
    box-shadow: 0 8px 28px var(--color-sombra-boton-hover);
  }

  @media (max-width: 1024px) {
    .container {
      width: 90vw;
    }
    .info {
      width: auto;
      flex-direction: column;
      height: 84vh;
    }
    .title {
      margin-top: 2rem;
    }

    .quote {
      font-size: 0.8rem;
    }
    figure {
      position: absolute;
      top: 0;
      left: -1rem;
      right: -1rem;
      height: 72vh;
      flex-direction: column;
    }
    figure p {
      position: absolute;
      bottom: 1rem;
      left: 1rem;
      z-index: 10;
      text-align: left;
    }
    figure img {
      height: 100%;
      width: 100%;

      border-radius: 0;
    }
    figure::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        0deg,
        #121212 0%,
        #12121249 36%,
        #12121200 100%
      );
      z-index: 1;
      border-radius: 8px;
    }

    p {
      opacity: 0.9;
    }
    .social {
      border: 1px solid var(--color-borde);
      padding: 12px 16px;
      height: 48px;
      width: 100%;
    }
    .social-flex {
      flex-direction: column;
      width: 100%;
      gap: 0.8rem;
    }
    footer {
      width: 100%;
    }
  }

  @media (max-width: 450px) {
    .info {
      width: 90vw;
    }
    .name {
      font-size: 2.4rem;
    }
    .labels h2 {
      font-size: 1.64rem;
    }

    .quote {
      margin-top: 1rem;
    }

    footer {
      flex-direction: column;
      gap: 0.8rem;
    }

    .social,
    .mail {
      width: 100%;
      display: flex;
      align-items: center;
    }
  }

  @media print {
    *,
    h1,
    h2,
    h3,
    h4,
    p,
    span {
      color: black;
      background: white;
    }
    footer {
      display: none;
    }
  }
</style>
