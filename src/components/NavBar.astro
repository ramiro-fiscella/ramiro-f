<style>
  nav {
    width: 100%;
    height: max-content;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    
    backdrop-filter: blur(10px);
    opacity: .5;
    color: var(--color-primario);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
  }

  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
  }

  ul li a {
    color: var(--color-terciario);
  }
</style>