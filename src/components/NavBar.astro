<style>
  nav {
    width: 100%;
    height: 56px;

    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;

    backdrop-filter: blur(10px);

    padding: 1rem;
  }

  .nav-container {
    width: 90vw;
    max-width: 1024;

    height: fit-content;
    margin: 0 auto;

    position: relative;

    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    display: flex;
    align-items: flex-start;

    list-style: none;
    gap: 1rem;
    height: 100%;
  }

